def Dice_Roll_Simulator():
	Simulating = True
	while Simulating == True:
		import random
		import time
		print("Welcome to the Dice Rolling Simulator!")
		print("Rolling the Dice...")
		time.sleep(1)
		Dice_1 = random.randint(1, 6)
		Dice_2 = random.randint(1, 6)
		print("The value of Dice 1 is {0} \nThe value of Dice 2 is {1}".format(
			Dice_1, Dice_2))
		time.sleep(1)
		if Dice_1 == Dice_2:
			print(
				"Congrats! You got the same value ({0}) in both of the Dice.".format(Dice_1))
		flag = True
		while flag:
			Again = input("Do you want to simulate again? (y/n)").lower()
			if Again == 'y':
				Simulating = True
				flag = False
			elif Again == 'n':
				Simulating = False
				print("Thank you for using!.")
				flag = False
			else:
				print("Invalid input! Please try again!")


Dice_Roll_Simulator()
